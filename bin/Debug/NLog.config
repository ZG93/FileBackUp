<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" throwConfigExceptions="true">
  <targets>
    <!--屏幕打印消息-->
    <target name="console" xsi:type="ColoredConsole"
            layout="[${longdate}][${threadid}][${level:uppercase=false}][${message}]"/>

    <!--保存至文件-->
    <target name="file" xsi:type="File" maxArchiveFiles="31" encoding="utf-8" enableArchiveFileCompression="true"
            archiveFileName="${currentdir}/Log/data.log.{#}.zip" archiveNumbering="Date"
            archiveEvery="Day" archiveDateFormat="yyyyMMdd" fileName="${currentdir}/Log/data.log"
            layout="${longdate}[${threadid}][${level:uppercase=false}][${message}]" />
  </targets>
  <rules>
    <logger name="*" minlevel="Debug" writeTo="console" />
    <logger name="*" minlevel="Debug" writeTo="file" />
  </rules>
</nlog>
